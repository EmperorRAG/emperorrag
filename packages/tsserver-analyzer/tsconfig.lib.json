{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "dist",
		"tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
		"emitDeclarationOnly": true,
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"forceConsistentCasingInFileNames": true,
		"types": ["node", "vite/client"]
	},
	"include": ["src/**/*.ts"],
	"references": [],
	"exclude": [
		"./node_modules",
		"./tmp",
		"./dist",
		"./out-tsc",
		"./vite.config.ts",
		"vite.config.mts",
		"vitest.config.ts",
		"vitest.config.mts",
		"src/**/*.test.ts",
		"src/**/*.spec.ts",
		"src/**/*.test.tsx",
		"src/**/*.spec.tsx",
		"src/**/*.test.js",
		"src/**/*.spec.js",
		"src/**/*.test.jsx",
		"src/**/*.spec.jsx"
	]
}
