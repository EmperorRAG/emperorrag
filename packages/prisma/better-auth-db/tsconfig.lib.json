{
	"extends": "../../../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "./dist",
		"tsBuildInfoFile": "./tsconfig.lib.tsbuildinfo",
		"emitDeclarationOnly": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["node", "vite/client"]
	},
	"include": ["./src/**/*.ts"],
	"references": [
		{
			"path": "../../better-auth-utilities/tsconfig.lib.json"
		}
	],
	"exclude": [
		"./vite.config.ts",
		"./vite.config.mts",
		"./vitest.config.ts",
		"./vitest.config.mts",
		"./src/**/*.test.ts",
		"./src/**/*.spec.ts",
		"./src/**/*.test.tsx",
		"./src/**/*.spec.tsx",
		"./src/**/*.test.js",
		"./src/**/*.spec.js",
		"./src/**/*.test.jsx",
		"./src/**/*.spec.jsx",
		"./prisma/generated/*.ts",
		"./src/**/prisma/generated/client/*.ts"
	]
}
