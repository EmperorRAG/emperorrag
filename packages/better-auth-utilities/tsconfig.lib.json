{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "./out-tsc/lib",
		"tsBuildInfoFile": "./dist/tsconfig.lib.tsbuildinfo",
		"emitDeclarationOnly": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["node", "vite/client"]
	},
	"include": ["./src/**/*.ts", "./vite.config.ts", "./vite.config.mts", "./externalize-packages.ts", "./externals.json"],
	"references": [],
	"exclude": [
		"./vitest.config.ts",
		"./vitest.config.mts",
		"./src/**/*.test.ts",
		"./src/**/*.spec.ts",
		"./src/**/*.test.tsx",
		"./src/**/*.spec.tsx",
		"./src/**/*.test.js",
		"./src/**/*.spec.js",
		"./src/**/*.test.jsx",
		"./src/**/*.spec.jsx"
	]
}
