{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out-tsc/vitest",
    "types": [
      "vitest/globals",
      "vitest/importMeta",
      "vite/client",
      "node",
      "vitest"
    ],
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "lib": ["es2022", "dom"]
  },
  "include": [
    "./vite.config.ts",
    "./vite.config.mts",
    "./vitest.config.ts",
    "./vitest.config.mts",
    "./src/**/*.test.ts",
    "./src/**/*.spec.ts",
    "./src/**/*.test.tsx",
    "./src/**/*.spec.tsx",
    "./src/**/*.test.js",
    "./src/**/*.spec.js",
    "./src/**/*.test.jsx",
    "./src/**/*.spec.jsx",
    "./externalize-packages.ts",
    "./externals.json"
  ],
  "references": [
    {
      "path": "./tsconfig.lib.json"
    }
  ]
}
